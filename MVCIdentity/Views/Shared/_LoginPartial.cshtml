@using Microsoft.AspNetCore.Identity
@using MVCIdentity.Areas.Identity.Data

@inject SignInManager<MVCIdentityUser> SignInManager
@inject UserManager<MVCIdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole("Ogrenci"))
    {
        <div class="container mt-3">


            <div class="btn-group">
                <a class="btn btn-primary" asp-area="" asp-controller="OgrenciDers" asp-action="Index">Öğrenci Ders Kayıt</a>
            </div>
        </div>
    }
    if (User.IsInRole("Ogrenci Isleri"))
    {
        <div class="container mt-3">


            <div class="btn-group">
                <a class="btn btn-primary" asp-area="" asp-controller="Ders" asp-action="Index">Dersler</a>
                <a class="btn btn-primary" asp-area="" asp-controller="OgrenciRol" asp-action="Index">Öğrenci Rolü Atama/Çıkarma</a>
                <a class="btn btn-primary" asp-area="" asp-controller="OgrenciDersDuzenleme" asp-action="Index">
                    Öğrenci Ders Düzenleme
                </a>
                <a class="btn btn-primary" asp-area="" asp-controller="OgrenciDersDuzenleme2" asp-action="Index">Öğrenci Ders Ekleme</a>
            </div>
        </div>
    }
    if (User.IsInRole("Yonetici"))
    {
        <div class="container mt-3">


            <div class="btn-group">
                <a class="btn btn-primary" asp-area="" asp-controller="Ders" asp-action="Index">Dersler</a>
                <a class="btn btn-primary" asp-area="" asp-controller="OgrenciRol" asp-action="Index">Öğrenci Rolü Atama/Çıkarma</a>
                <a class="btn btn-primary" asp-area="" asp-controller="OgrenciDersDuzenleme" asp-action="Index">
                    Öğrenci Ders Düzenleme
                </a>
                <a class="btn btn-primary" asp-area="" asp-controller="OgrenciDersDuzenleme2" asp-action="Index">Öğrenci Ders Ekleme</a>
                <a class="btn btn-primary" asp-area="" asp-controller="Rol" asp-action="Index">Roller</a>
            </div>
        </div>
    }

}


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {

        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>

        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
